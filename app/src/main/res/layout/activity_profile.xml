<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context="com.jaylerrs.bikesquad.users.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="15dp"
        android:src="@drawable/img_users"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_profile_name"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/img_profile_image"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/txt_profile_email"
        android:layout_below="@id/txt_profile_name"
        android:layout_toEndOf="@+id/img_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"/>
    <TextView
        android:id="@+id/txt_profile_phone_number"
        android:layout_below="@id/txt_profile_email"
        android:layout_toEndOf="@+id/img_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="top"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/txt_profile_detail"
        android:layout_below="@id/img_profile_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/profile_message_detail"/>

    <TextView
        android:id="@+id/txt_profile_back"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingEnd="40dp"
        android:gravity="center_vertical"
        android:text="@string/message_back"/>
    <Button
        android:id="@+id/btn_profile_advance_option"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/txt_profile_back"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        android:text="@string/profile_message_advance_opt"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_profile_advance_log_out"
        android:layout_above="@+id/btn_profile_advance_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ver_message_log_out"
        android:theme="@style/ThemeOverlay.MyWarnButton"
        android:visibility="gone"
        android:textColor="@color/color_pastel_red"/>

    <Button
        android:id="@+id/btn_profile_advance_delete_account"
        android:layout_above="@+id/btn_profile_advance_log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_message_delete_account"
        android:visibility="gone"
        android:theme="@style/ThemeOverlay.MyDangerousButton"/>

</RelativeLayout>
