<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaylerrs.bikesquad.auth.views.SignInFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_sign_in_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/txt_sign_in_title"
            android:layout_below="@id/img_sign_in_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:text="@string/auth_message_user_gmail"/>

        <EditText
            android:id="@+id/edt_sign_in_username"
            android:layout_below="@id/txt_sign_in_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textAlignment="center"
            android:inputType="textEmailAddress"
            style="@style/button_square_style"
            android:hint="@string/auth_message_username_or_email"/>

        <EditText
            android:id="@+id/edt_sign_in_password"
            android:layout_below="@+id/edt_sign_in_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textAlignment="center"
            android:inputType="textPassword"
            style="@style/button_square_style"
            android:hint="@string/auth_message_password"/>

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_below="@+id/edt_sign_in_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            style="@style/button_round_style"
            android:text="@string/auth_message_sign_in"/>
        <TextView
            android:id="@+id/txt_forget_password"
            android:layout_below="@id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:text="@string/auth_message_forget_password"
            android:textAlignment="textEnd"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="15dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/app_message_no_account" />
            <TextView
                android:id="@+id/txt_sign_in_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="@string/app_message_register"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
