<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_light_overlay"
    tools:context="com.jaylerrs.bikesquad.settings.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:background="@color/silver_overlay"
            android:layout_marginBottom="1dp"
            android:text="@string/app_message_language"/>
        <RelativeLayout
            android:id="@+id/relative_language_th"
            android:layout_width="match_parent"
            android:background="@color/white_overlay"
            android:layout_margin="1dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/img_language_th"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_thailand"/>
            <TextView
                android:id="@+id/txt_language_th"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/language_thailand"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/img_language_th" />
            <ImageView
                android:id="@+id/img_language_th_next"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_language_en"
            android:layout_width="match_parent"
            android:layout_margin="1dp"
            android:background="@color/white_overlay"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/img_language_en"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_united_kingdom"/>
            <TextView
                android:id="@+id/txt_language_en"
                android:layout_toEndOf="@+id/img_language_en"
                android:layout_toStartOf="@+id/img_language_en_next"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/language_english"/>
            <ImageView
                android:id="@+id/img_language_en_next"
                android:layout_width="50dp"
                android:padding="8dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_next"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
