<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_pastel_orange"
    tools:context="com.jaylerrs.bikesquad.auth.views.ForgetActivity">

    <ImageView
        android:id="@+id/img_forget_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@mipmap/ic_launcher"/>
    <EditText
        android:id="@+id/edt_forget_username"
        android:layout_below="@id/img_forget_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="center"
        android:text="@string/auth_message_username"
        android:padding="10dp"
        style="@style/button_square_style"/>

    <Button
        android:id="@+id/edt_forget_submit"
        android:layout_below="@id/edt_forget_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:text="@string/app_message_send_an_email"
        style="@style/button_round_style"/>
    <TextView
        android:id="@+id/txt_forget_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:textStyle="bold"
        android:text="@string/message_back"/>

</RelativeLayout>
