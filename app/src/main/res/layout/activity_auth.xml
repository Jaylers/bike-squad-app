<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_auth_base"
    android:background="@color/color_pastel_orange"
    android:alpha="0.9"
    tools:context="com.jaylerrs.bikesquad.auth.views.AuthActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_sign_in_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_launcher_round"/>
        <TextView
            android:id="@+id/txt_sign_in_title"
            android:layout_below="@id/img_sign_in_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:padding="5dp"
            android:text="@string/auth_message_user_gmail"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/widget_sign_in_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textAlignment="center"
            android:layout_below="@id/txt_sign_in_title">

            <EditText
                android:id="@+id/edt_sign_in_email"
                style="@style/button_square_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/auth_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textAlignment="center" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/widget_sign_in_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_below="@id/widget_sign_in_username">
            <EditText
                android:id="@+id/edt_sign_in_password"
                android:layout_below="@+id/widget_sign_in_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:inputType="textPassword"
                style="@style/button_square_style"
                android:maxLines="1"
                android:hint="@string/auth_message_password"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/txt_sign_in_message"
            android:layout_below="@+id/widget_sign_in_password"
            android:layout_margin="10dp"
            android:text="@string/app_name"
            android:gravity="center"
            android:textColor="@color/color_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_below="@+id/txt_sign_in_message"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            style="@style/button_round_style"
            android:text="@string/auth_message_sign_in"/>
        <TextView
            android:id="@+id/txt_forget_password"
            android:layout_below="@id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:text="@string/auth_message_forget_password"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_below="@id/txt_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/auth_message_or"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/img_sign_in_google"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/img_google"
            android:layout_below="@+id/txt_or"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/app_message_no_account" />
            <TextView
                android:id="@+id/txt_sign_in_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="@string/app_message_register"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
